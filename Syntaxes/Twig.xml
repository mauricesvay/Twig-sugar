<?xml version="1.0"?>
<syntax name="language-root.Twig">

    <zones>
        <!-- Root-level <zone> and <include> elements go here -->
        <zone name="statement">
            <starts-with>
                <expression>{%</expression>
            </starts-with>
            <ends-with>
                <expression>%}</expression>
            </ends-with>
            <subzones name="statement.content">
                <include collection="language" />
            </subzones>
        </zone>
        <zone name="expression">
            <starts-with>
                <expression>{{</expression>
            </starts-with>
            <ends-with>
                <expression>}}</expression>
            </ends-with>
        </zone>
        
        <zone name="comment">
            <starts-with>
                <expression>{#</expression>
            </starts-with>
            <ends-with>
                <expression>#}</expression>
            </ends-with>
        </zone>
        <include syntax="language-root.html"/>
    </zones>
    
    <!-- The (optional) <library> tag contains collections of reusable zones -->
    <library>
        <collection name="language">
            <zone name="language.command">
                <expression>\b(spaceless|endspaceless|set|raw|endraw|block|endblock|extends|include|autoescape|endautoescape|for|in|endfor|if|else|elseif|endif|macro|endmacro|filter|endfilter|set|endset|import|as)\b</expression>
            </zone>
        </collection>
    </library>
    
</syntax>